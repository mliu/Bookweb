<body>
    <div class="container" style="margin-top: 100px">

      <div class="row">
        <div class="col-lg-6">
          <img style="margin-left: 100px" width="300px" src=<%= @first_book.image_link(:zoom => 4) %> alt=<%= @first_book.title %> />
        </div>
        <div class="col-lg-6">
          <%= form_for @book, url: {action: "create"}, method: "post", html: {class: "form-horizontal"} do |f| %>
          <% if @book.errors.any? %>
              <div id="error_explanation">
<!--                 <h2><%= pluralize(@book.errors.count,) %> prohibited this book from being saved:</h2> -->

                <ul>
                <% @book.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <legend>Posting Information</legend>
            <div class="form-group">
              <%= f.label :email, class:"col-lg-2 control-label" %>
              <div class="col-lg-6">
                <%=f.text_field :email, placeholder: "(e.g.) abc123@vt.edu", maxlength:100, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :school_id, class:"col-lg-2 control-label" %>
              <div class="col-lg-10">
                <%= f.select :school_id, options_for_select([['Select One', ""], ['Virginia Tech', "Virginia Tech"]]), :required => true, class: "selectpicker input-lg col-lg-6" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :condition, class: "col-lg-2 control-label" %>
              <div class="col-lg-10">
                <%= f.select :condition, options_for_select([['Select One', ""], ['Brand New', "1"], ['Lightly Used', "2"], ['Used', "3"],['Heavily Used', "4"]]), class: "selectpicker input-lg col-lg-6",  :required => true %>
              </div>
            </div>
            <div class="form-group">
              <label for="course" class="col-lg-2 control-label">Course </label>
              <div class="col-lg-6">
                <%= f.text_field :course, placeholder: "(e.g.) ENGE 1024", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label for="title" class="col-lg-2 control-label">Title </label>
              <div class="col-lg-6">
                <%= f.text_field :title, placeholder: "(e.g.) Intro to Engineering", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label for="price" class="col-lg-2 control-label">Price</label>
              <div class="col-lg-6">
                <!-- <span class="input-group-addon">$</span> -->
                <%= f.text_field :asking_price, placeholder: "(e.g.) 10.99", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-12">
                <%= f.hidden_field :img_url, :value => @first_book.image_link(:zoom => 4) %>
                <%= f.hidden_field :isbn, :value => @isbn %>
                <%= f.submit "Post", class: "btn btn-primary col-lg-5" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!--/.container-->
  </body>