<body>
    <div class="container" style="margin-top: 100px">

      <div class="row">
        <div class="col-lg-6">
          <img style="margin-left: 100px" width="300px" src=<%= @first_book.image_link(:zoom => 4) %> alt=<%= @first_book.title %> />
        </div>
        <div class="col-lg-6">
          <%= form_for @book, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
          <% if @book.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

                <ul>
                <% @book.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <legend>Posting Information</legend>
            <div class="form-group">
              <label for="course" class="col-lg-2 control-label">Email: </label>
              <div class="col-lg-6">
                <%=f.text_field :email, placeholder: "(e.g.) abc123@vt.edu", maxlength:100, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label for="school" class="col-lg-2 control-label">University</label>
              <div class="col-lg-10">
                <select class="selectpicker input-lg col-lg-6" id="school" name="school" required="">
                  <option value="">Select One</option>
                  <optgroup label="Virginia">
                    <option value="Virginia_Tech">Virginia Tech</option>
                  </optgroup>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="condition" class="col-lg-2 control-label">Condition</label>
              <div class="col-lg-10">
                <select class="selectpicker input-lg col-lg-6" name="condition" required="">
                  <option value="">Select One</option>
                  <option value="brand_new">Brand New</option>
                  <option value="lightly_used">Lightly Used</option>
                  <option value="used">Used</option>
                  <option value="heavily_used">Heavily Used</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="course" class="col-lg-2 control-label">Course: </label>
              <div class="col-lg-6">
                <%= f.text_field :course, placeholder: "(e.g.) ENGE 1024", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label for="title" class="col-lg-2 control-label">Title: </label>
              <div class="col-lg-6">
                <%= f.text_field :title, placeholder: "(e.g.) Intro to Engineering", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label for="price" class="col-lg-2 control-label">Price</label>
              <div class="input-group col-lg-6">
                <span class="input-group-addon">$</span>
                <%= f.text_field :asking_price, placeholder: "10.99", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <%= f.submit "Post", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!--/.container-->
  </body>