<body>
    <div class="container" style="margin-top: 100px">
      <div class="row">

        <div class="col-lg-12">
          <form class="form-horizontal" role="form" method="get" action=<%= books_path %>>
            
       
            <div class="well">
              <h4>Book Search</h4>
                <div class="input-group">
                  <input type="text" class="form-control" name="search" placeholder="Search by ISBN, title, or course">
                  <span class="input-group-btn">
                    <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                  </span>
                </div><!-- /input-group -->
            </form>
          </div><!-- /well -->
        </div>
       
        <div style="margin-bottom: 20px">
          <div class="btn-group pull-right" style="margin-right: 13px">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              Sort by <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" style="width: 200px">
              <li><a href="#">Price (High)<span class="pull-right glyphicon glyphicon-arrow-up"></span></a></li>
              <li><a href="#">Price (Low)<span class="pull-right glyphicon glyphicon-arrow-down"></span></a></li>
              <li class="divider"></li>
              <li><a href="#">Condition (ASC)<span class="pull-right glyphicon glyphicon-arrow-up"></span></a></li>
              <li><a href="#">Condition (DESC)<span class="pull-right glyphicon glyphicon-arrow-down"></span></a></li>
            </ul>
          </div>
          <h3>Search Results For <span class="label label-success"><%= params[:search] %></span></h3>
        </div>
        <div class="col-md-12">
          <div class="row">
            <% if @books.count != 0 %>
            <% @books.each_with_index do |book, index| %>
            <div class="col-sm-3 col-lg-3 col-md-3">
              <div class="thumbnail">
                <img src="http://placehold.it/180x220" alt="">
                <div class="caption">
                  <h4 class="pull-right">$<%= book.asking_price %></h4>
                  <h4 class=""><%= book.course %></h4>
                  <p class="text-center"><%= book.title %></p>
                </div>
                <div class="ratings text-center">
                  <button class="btn btn-primary" data-toggle="modal" data-target=<%= '#' + book.title + index.to_s%> type="button">Contact Seller</span></button>
                </div>
              </div>
            </div>
            <div class="modal fade" id=<%= book.title + index.to_s %>>
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><%= book.title %> - <%= book.course %></h4>
                  </div>
                  <div class="modal-body">
                    <form name="sentMessage" class="well" id="contactForm"  novalidate>
                        <div class="control-group">
                              <div class="controls">
                                  <input type="text" class="form-control" 
                                                placeholder="Full Name" id="name" required
                                             data-validation-required-message="Please enter your name" />
                                  <p class="help-block"></p>
                             </div>
                           </div>         
                          <div class="control-group">
                            <div class="controls">
                                  <input type="email" class="form-control" placeholder="Email" 
                                                         id="email" required
                                                        data-validation-required-message="Please enter your email" />
                                  <p class="help-block"></p>
                            </div>
                          </div>         
                           <div class="control-group">
                            <div class="controls">
                                  <input type="text" class="form-control" placeholder="Subject" 
                                                         id="subject" required
                                                        data-validation-required-message="Please enter the subject" />
                                  <p class="help-block"></p>
                            </div>
                          </div>            
                         <div class="control-group">
                           <div class="controls">
                                           <textarea rows="10" cols="100" class="form-control" 
                                 placeholder="Message" id="message" required
                                 data-validation-required-message="Please enter your message" minlength="5" 
                                 data-validation-minlength-message="Min 5 characters" 
                                  maxlength="999" style="resize:none"></textarea>
                                           <p class="help-block"></p>
                          </div>
                         </div>                  
                       <div id="success"> </div> <!-- For success/fail messages -->
                      <button type="submit" class="btn btn-primary pull-right">Send</button><br />
                    </form>
                  </div>
                </div><!-- /.modal-content -->
              </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
          <% end %>
          </div>
          <% else %>
          <h3>No books found</h3>
          <% end %>
      </div>

    </div><!-- /.container -->
  </body>