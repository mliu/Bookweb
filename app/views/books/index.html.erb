<body>
    <div class="container" style="margin-top: 100px">
      <div class="row">

        <div class="col-lg-12">
          <form class="form-horizontal" role="form" method="get" action=<%= books_path %>>
            
       
            <div class="well">
              <h4>Book Search</h4>
                <div class="input-group">
                  <input type="text" class="form-control" name="search" placeholder="Search by ISBN, title, or course" value=<%= params[:search] %>>
                  <span class="input-group-btn">
                    <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                  </span>
                </div><!-- /input-group -->
            </form>
          </div><!-- /well -->
        </div>
        <div class="col-md-12">
          <div class="row">
            <% if @books.count != 0 %>
            <% @books.each do |book| %>
            <div class="col-sm-3 col-lg-3 col-md-3">
              <div class="thumbnail">
                <img src="http://placehold.it/180x220" alt="">
                <div class="caption">
                  <h4 class="pull-right">$<%= book.asking_price %></h4>
                  <h4 class=""><%= book.course %></h4>
                  <p class="text-center"><%= book.title%></p>
                </div>
                <div class="ratings text-center">
                  <button class="btn btn-primary" type="button">Contact Owner</span></button>
                </div>
              </div>
            </div>
          <% end %>
          </div>
          <% else %>
          <h3>No books found</h3>
          <% end %>
      </div>

    </div><!-- /.container -->
  </body>