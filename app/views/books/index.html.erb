<body>
    <div class="container" style="margin-top: 80px">
      <div class="row">

        <div class="col-lg-12">
          <form class="form-horizontal" role="form" method="get" action=<%= books_path %>>
            <div class="well">
               <div class="text-center">
            <label for="school_id">University:</label>
            <%= select_tag 'school_id', options_for_select([['Select One', ""], ['Virginia Tech', "1"]]), :required => true, class: "input-sm" %>
          </div>
              <h4>Book Search</h4>
              <div class="col-lg-12">
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], placeholder: "Search by ISBN, title, or course", maxlength:100, class: "form-control" %>
                  <span class="input-group-btn">
                    <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                  </span>
                </div><!-- /input-group -->
              </div>
            </form>
          </div><!-- /well -->
        </div>
       
        <div style="margin-bottom: 20px">
          <div class="btn-group pull-right" style="margin-right: 13px">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              Sort by <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu" style="width: 200px">
              <li><a href="#">Price (High)<span class="pull-right glyphicon glyphicon-arrow-up"></span></a></li>
              <li><a href="#">Price (Low)<span class="pull-right glyphicon glyphicon-arrow-down"></span></a></li>
              <li class="divider"></li>
              <li><a href="#">Condition (ASC)<span class="pull-right glyphicon glyphicon-arrow-up"></span></a></li>
              <li><a href="#">Condition (DESC)<span class="pull-right glyphicon glyphicon-arrow-down"></span></a></li>
            </ul>
          </div>
          <h3>Search Results For <span class="label label-success"><%= params[:search] %></span></h3>

        </div>
        <div class="col-md-12">
          <div class="row">
            <% if @books.count != 0 %>
            <% @books.each_with_index do |book, index| %>
            <div class="col-sm-3 col-lg-3 col-md-3">
              <div class="thumbnail">
                <h4 class="label label-danger" style="margin: -10px 0 -30px -10px"><%= book.condition %></h4>
                <a href="" data-toggle="modal" data-target=<%= '#' + book.title + index.to_s%> ><img width="200px"src=<%= book.img_url %> alt=""></a>
                <div class="caption">
                  <h4 class="pull-right">$<%= book.asking_price %></h4>
                  <h4 class=""><%= book.course %></h4>
                  <p class="text-center"><%= book.title %></p>
                </div>
                <div class="ratings text-center">
                  <button style="margin-bottom: 5px" class="btn btn-primary" data-toggle="modal" data-target=<%= '#' + book.title + index.to_s%> type="button">Contact Seller</span></button>
                </div>
              </div>
            </div>
            <div class="modal fade" id=<%= book.title + index.to_s %>>
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"><%= book.title %> - <%= book.course %> - <%= book.school_id %></h4>
                  </div>
                  <div class="modal-body">
                    <%= form_for @book, url: {action: :email_user}, method: :get, html: {class: "well"} do |f| %>    
                          <div class="control-group">
                            <div class="controls">
                                  <input type="email" name="from" class="form-control" placeholder="Email" 
                                                        id="email" required
                                                        data-validation-required-message="Please enter your email" />
                                  <p class="help-block"></p>
                            </div>
                          </div>         
                           <div class="control-group">
                            <div class="controls">
                                  <input type="text" name="subject" class="form-control" placeholder="Subject" 
                                                        id="subject" required
                                                        data-validation-required-message="Please enter the subject"
                                                        value=<%= book.title %> />
                                  <p class="help-block"></p>
                            </div>
                          </div>            
                         <div class="control-group">
                           <div class="controls">
                                           <textarea name="message" rows="10" cols="100" class="form-control" 
                                 placeholder="Message" id="message" required
                                 data-validation-required-message="Please enter your message" minlength="5" 
                                 data-validation-minlength-message="Min 5 characters" 
                                  maxlength="999" style="resize:none"></textarea>
                                           <p class="help-block"></p>
                          </div>
                         </div>                  
                       <div id="success"> </div> <!-- For success/fail messages -->
                       <%= f.submit "Send", class: "btn btn-primary pull-right" %>
                       <br />
                    <% end %>
                  </div>
                </div><!-- /.modal-content -->
              </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
          <% end %>
          </div>
          <% else %>
          <h3>No books found</h3>
          <% end %>
      </div>

    </div><!-- /.container -->
  </body>